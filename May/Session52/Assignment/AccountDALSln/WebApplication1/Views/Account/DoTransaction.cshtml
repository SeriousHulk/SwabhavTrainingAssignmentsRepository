@model WebApplication1.ViewModels.TransactionViewModel

@{
    ViewBag.Title = "Transact";
}

<h2>Do Transaction</h2>

<h4>Account Details:</h4>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>@Model.Account.Id</dd>
        <dt>Name</dt>
        <dd>@Model.Account.Name</dd>
        <dt>Balance</dt>
        <dd>@Model.Account.Balance</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Enter transaction details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Amount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Type, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Type, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Passbook", "Passbook", new { id = Model.Account.Id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Logout", "Logout", new { id = Model.Account.Id }, new { @class = "btn btn-primary" })
</div>
