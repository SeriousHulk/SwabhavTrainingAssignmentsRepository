@using ContactDALLib.Model;
@model List<Contact>
<h2>Display All Contacts</h2>



<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/fonts/fontawesome-webfont.svg" />
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Mobile</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
    @foreach(Contact contact in Model) 
    {
        <tr>
            <td scope="row">@contact.Id</td>
            <td>@contact.Name</td>
            <td>@contact.MobileNumber</td>
            <td>@Html.ActionLink("Edit", "EditContact", new { contact.Id }, new { @class = "btn btn-info" })</td>
            <td>@Html.ActionLink("Delete", "DeleteContact", new { contact.Id }, new { @class = "btn btn-danger", onclick = "return fnAreYOuSure()" })</td>
        </tr>
    }
    </tbody>
</table>
<script>
    function fnAreYOuSure() {
        return confirm('Are you sure to Delete?')
    }
</script>
