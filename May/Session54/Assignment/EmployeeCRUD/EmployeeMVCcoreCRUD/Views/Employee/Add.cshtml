@using EmployeeMVCcoreCRUD.ViewModels
@model EmployeeAddVM
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div class="container">
    @*<h1>@Model.Title</h1>*@

    @using (Html.BeginForm("Add", "Employee", FormMethod.Post))
    {
        <p>Id: @Html.TextBoxFor(m => m.EmployeeId)</p>
        <p>Name: @Html.TextBoxFor(m => m.EmployeeName)</p>
        <p>Salary: @Html.TextBoxFor(m => m.EmployeeSalary)</p>
        <input type="submit" value="Add" />
    }

</div>