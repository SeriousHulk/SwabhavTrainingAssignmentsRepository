<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Contact MVC V2</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/fonts")
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <nav type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar">@Html.ActionLink("Add Contact", "AddContact", "Contact", new { area = "" }, new { @class = "navbar-brand" })</span>
                    <span class="icon-bar">@Html.ActionLink("All Contact", "ShowAllContacts", "Contact", new { area = "" }, new { @class = "navbar-brand" })</span>
                    <span class="icon-bar">@Html.ActionLink("First Contact", "ShowSingle", "Contact", new { area = "" }, new { @class = "navbar-brand" })</span>
                    <p>
                        @if (Session["username"] == null)
                        {
                            <span>Guest </span>
                            @Html.ActionLink("Login", "Index", "Login")
                        }
                        else
                        {
                            <span>Welcome, @Session["username"]</span>
                            <span>@Html.ActionLink("Log out", "LogOut", "Contact")</span>
                        }
                    </p>
                </nav>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>